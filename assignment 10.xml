            }).catch((err) => {
                const errorCode = err.code
                const errorMessage = err.message
                console.log(`error`, errorCode, errorMessage);
            });
    }

    const handleRegisterButton = async (event) => {
        event.preventDefault();
        setError('');
        setLoading(true);

